<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.message.MessageViewController">
   <children>
      <SplitPane dividerPositions="0.6" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <VBox fx:id="containerVBox" prefHeight="480.0" prefWidth="395.0">
            <TableView fx:id="messagesTableView">
            </TableView>
            <VBox alignment="TOP_CENTER" prefHeight="154.0" prefWidth="471.0" spacing="5">
               <children>
                  <HBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" text="Back" />
                        <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendMessageAction" text="Send Message" />
                     </children>
                  </HBox>
                  <HBox fx:id="actionHBox" alignment="TOP_CENTER" spacing="10.0">
                       <children>
                       </children>
                  </HBox>
               </children>
            </VBox>
         </VBox>
            <VBox prefHeight="478.0" prefWidth="284.0" spacing="10.0">
               <children>
                  <Label fx:id="messageTitleLabel" text="Message" />
               <Label fx:id="messageContentLabel" text="Some message content" wrapText="true" />
               </children>
            </VBox>
      </SplitPane>
   </children>
</AnchorPane>
